<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="360.0" prefWidth="379.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unibl.etf.mdp.gui.BorderControlController">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Testna aplikacija">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="108.0" layoutY="10.0" text="Carinska kontrola">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <HBox spacing="5.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addDocumentsBtn" mnemonicParsing="false" onAction="#addDocuments" text="Dodajte dokumente" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <ListView fx:id="documentsLV" prefHeight="200.0" prefWidth="200.0" />
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="finishBtn" mnemonicParsing="false" onAction="#finish" prefWidth="100.0" text="Kraj">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
